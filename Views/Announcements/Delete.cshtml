@model Fora2.Models.Announcement

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this announcement?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            Created on
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <dl class="dl-horizontal">
                <dd>
                    <input type="submit" value="Delete" class="btn btn-default" />
                    <button class="btn btn-default" onclick="location.href='@Url.Action("ManageAnnouncements", "Admin")';return false;">Cancel</button>
                </dd>
            </dl>
        </div>
    }
</div>
