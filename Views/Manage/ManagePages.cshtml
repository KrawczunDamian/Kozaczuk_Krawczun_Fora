@model Fora2.Models.EditUserViewModel
@{
    ViewBag.Title = "Change messages per page";
}
@{
    IEnumerable<int> messagesPerPage = new int[] { 4, 5, 6, 7, 8, 9, 10 };

}
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ManagePages", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.MessagesPerPage, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.MessagesPerPage, new SelectList(messagesPerPage), htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change pages" class="btn btn-default" /> <button class="btn btn-default" onclick="location.href='@Url.Action("Index", "Manage")';return false;">Cancel</button>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}