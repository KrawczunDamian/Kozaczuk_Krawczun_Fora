@model IEnumerable<Fora2.Models.Rank>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Requirement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RankName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy( i => i.Requirement)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Requirement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RankName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RankId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RankId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RankId })
        </td>
    </tr>
}

</table>
